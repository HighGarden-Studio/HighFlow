# ==========================================
# FlowMind Environment Configuration
# ==========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ==========================================
# Application Settings
# ==========================================
NODE_ENV=development
VITE_APP_NAME=FlowMind
VITE_APP_VERSION=1.0.0

# ==========================================
# AI Provider API Keys
# ==========================================
# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-key-here
VITE_OPENAI_ORG_ID=org-your-org-id

# Anthropic (Claude) API Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google AI (Gemini) API Configuration
GOOGLE_AI_API_KEY=your-google-ai-key-here

# ==========================================
# Google OAuth Configuration
# ==========================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback

# ==========================================
# Git Integration
# ==========================================
# GitHub
VITE_GITHUB_CLIENT_ID=your-github-client-id
VITE_GITHUB_CLIENT_SECRET=your-github-client-secret

# GitLab (optional)
VITE_GITLAB_CLIENT_ID=your-gitlab-client-id
VITE_GITLAB_CLIENT_SECRET=your-gitlab-client-secret

# Bitbucket (optional)
VITE_BITBUCKET_CLIENT_ID=your-bitbucket-client-id
VITE_BITBUCKET_CLIENT_SECRET=your-bitbucket-client-secret

# ==========================================
# Slack Integration
# ==========================================
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
VITE_SLACK_CLIENT_ID=your-slack-client-id
VITE_SLACK_CLIENT_SECRET=your-slack-client-secret

# ==========================================
# Discord Integration (optional)
# ==========================================
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# ==========================================
# Real-time Collaboration
# ==========================================
# Supabase (Real-time collaboration)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# OR Liveblocks (Alternative for collaboration)
VITE_LIVEBLOCKS_PUBLIC_KEY=pk_your-liveblocks-key
LIVEBLOCKS_SECRET_KEY=sk_your-liveblocks-secret

# ==========================================
# Webhook Server
# ==========================================
WEBHOOK_PORT=3001
WEBHOOK_SECRET=your-webhook-secret

# ==========================================
# Error Tracking & Analytics
# ==========================================
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# ==========================================
# Database (if using remote sync)
# ==========================================
VITE_DATABASE_URL=
VITE_DATABASE_AUTH_TOKEN=

# ==========================================
# Auto-Update Settings
# ==========================================
VITE_AUTO_UPDATE_ENABLED=true
VITE_AUTO_UPDATE_CHECK_INTERVAL=14400000

# ==========================================
# Feature Flags
# ==========================================
VITE_FEATURE_AI_ASSISTANT=true
VITE_FEATURE_INTEGRATIONS=true
VITE_FEATURE_COLLABORATION=false
VITE_FEATURE_CLOUD_SYNC=false
VITE_FEATURE_DARK_MODE=true

# ==========================================
# Security Settings
# ==========================================
VITE_ENABLE_CSP=true
VITE_STRICT_CSP=false

# ==========================================
# Development Settings
# ==========================================
VITE_DEV_TOOLS=true
VITE_LOG_LEVEL=debug
VITE_MOCK_API=false

# ==========================================
# Build-time Variables (CI/CD)
# ==========================================
# These are typically set in CI/CD environment
# APPLE_ID=
# APPLE_APP_SPECIFIC_PASSWORD=
# APPLE_TEAM_ID=
# APPLE_CERTIFICATE=
# APPLE_CERTIFICATE_PASSWORD=
# WIN_CERTIFICATE=
# WIN_CERTIFICATE_PASSWORD=
# GH_TOKEN=
