{
    "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
    "appId": "com.highflow.app",
    "productName": "HighFlow",
    "copyright": "Copyright Â© 2026 HighFlow",
    "directories": {
        "output": "dist",
        "buildResources": "build"
    },
    "files": ["dist-electron/**/*", "dist/**/*", "package.json"],
    "extraResources": [
        {
            "from": "resources/",
            "to": "resources/",
            "filter": ["**/*"]
        }
    ],
    "asar": true,
    "asarUnpack": ["node_modules/sharp/**/*", "node_modules/@img/**/*"],
    "mac": {
        "category": "public.app-category.productivity",
        "target": [
            {
                "target": "dmg",
                "arch": ["x64", "arm64"]
            },
            {
                "target": "zip",
                "arch": ["x64", "arm64"]
            }
        ],
        "icon": "build/icon.icns",
        "hardenedRuntime": true,
        "gatekeeperAssess": false,
        "entitlements": "build/entitlements.mac.plist",
        "entitlementsInherit": "build/entitlements.mac.inherit.plist",
        "notarize": {
            "teamId": "${env.APPLE_TEAM_ID}"
        },
        "darkModeSupport": true,
        "minimumSystemVersion": "10.15"
    },
    "dmg": {
        "sign": false,
        "contents": [
            {
                "x": 130,
                "y": 220
            },
            {
                "x": 410,
                "y": 220,
                "type": "link",
                "path": "/Applications"
            }
        ],
        "window": {
            "width": 540,
            "height": 380
        }
    },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": ["x64", "ia32"]
            },
            {
                "target": "portable",
                "arch": ["x64"]
            }
        ],
        "icon": "build/icon.ico",
        "publisherName": "HighFlow",
        "verifyUpdateCodeSignature": true,
        "signAndEditExecutable": true,
        "certificateFile": "${env.WIN_CSC_LINK}",
        "certificatePassword": "${env.WIN_CSC_KEY_PASSWORD}"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "deleteAppDataOnUninstall": false,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "HighFlow",
        "installerIcon": "build/icon.ico",
        "uninstallerIcon": "build/icon.ico",
        "installerSidebar": "build/installerSidebar.bmp",
        "license": "LICENSE"
    },
    "linux": {
        "target": [
            {
                "target": "AppImage",
                "arch": ["x64"]
            },
            {
                "target": "deb",
                "arch": ["x64"]
            },
            {
                "target": "rpm",
                "arch": ["x64"]
            }
        ],
        "icon": "build/icons",
        "category": "Office",
        "synopsis": "AI-powered workflow management",
        "description": "HighFlow - Intelligent workflow and task management application",
        "desktop": {
            "Name": "HighFlow",
            "Comment": "AI-powered workflow management",
            "Categories": "Office;ProjectManagement;Utility",
            "Keywords": "workflow;task;project;management;ai"
        },
        "maintainer": "HighFlow Team <support@highflow.app>"
    },
    "deb": {
        "depends": ["libnotify4", "libxtst6", "libnss3", "libxss1", "libsecret-1-0"],
        "afterInstall": "build/linux/after-install.sh",
        "afterRemove": "build/linux/after-remove.sh"
    },
    "rpm": {
        "depends": ["libnotify", "libXtst", "nss", "libXScrnSaver", "libsecret"]
    },
    "appImage": {
        "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "publish": {
        "provider": "github",
        "owner": "highgarden-studio",
        "repo": "highflow",
        "releaseType": "release",
        "publishAutoUpdate": true
    },
    "releaseInfo": {
        "releaseNotes": "See CHANGELOG.md for details"
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "compression": "maximum",
    "electronDownload": {
        "cache": ".cache/electron"
    },
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": true
}
